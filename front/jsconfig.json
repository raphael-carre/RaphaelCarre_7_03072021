{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@img/*": [
                "./src/images/*"
            ],
            "@css/*": [
                "./src/sass/*"
            ],
            "@js/*": [
                "./src/js/*"
            ],
            "@fonts/*": [
                "./src/fonts/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/js/**/*"
    ]
}